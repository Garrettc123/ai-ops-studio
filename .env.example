# Application Configuration
NODE_ENV=development
API_VERSION=v1
PORT=3000

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/aiopsstudio
DB_POOL_SIZE=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=2000

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_TTL=3600

# AI/ML Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-west1-gcp
PINECONE_INDEX_NAME=aiopsstudio-embeddings

# Authentication & Security
JWT_SECRET=your_secure_jwt_secret_key_at_least_32_chars
REFRESH_TOKEN_SECRET=your_secure_refresh_token_secret_key
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_EXPIRES_IN=7d
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Temporal Workflow Engine
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=workflows

# Integrations
HUBSPOT_CLIENT_ID=your_hubspot_client_id
HUBSPOT_CLIENT_SECRET=your_hubspot_client_secret
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=api-gateway
LOG_LEVEL=info

# HashiCorp Vault
VAULT_ADDR=http://localhost:8200
VAULT_TOKEN=your_vault_token

# AWS (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# GCP (for production)
GCP_PROJECT_ID=
GCP_REGION=us-central1

# Email/Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SLACK_WEBHOOK_URL=

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_CUSTOM_AGENTS=true
ENABLE_RAG=true
ENABLE_AUDIT_LOGGING=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Cost Management
MAX_TOKENS_PER_REQUEST=4000
DEFAULT_MODEL=claude-3-5-sonnet-20241022
ENABLE_COST_OPTIMIZATION=true